# Real Estate Application Environment Variables
# Copy this file to .env and update the values

# ==============================================
# FRONTEND ENVIRONMENT VARIABLES
# ==============================================

# API Base URL - Update for your environment
# For local development: http://localhost:5000
# For production: your deployed API URL
NEXT_PUBLIC_API_URL=http://localhost:5000

# Application Environment
NEXT_PUBLIC_APP_ENV=development

# ==============================================
# BACKEND ENVIRONMENT VARIABLES
# ==============================================

# ASP.NET Core Environment
ASPNETCORE_ENVIRONMENT=Development

# Enable detailed errors for debugging
ASPNETCORE_DETAILEDERRORS=true

# CORS Configuration - Frontend URLs that can access the API
# For local: http://localhost:3000
# For production: your deployed frontend URL
CORS_ORIGINS=http://localhost:3000

# Frontend URL for any backend redirects
FRONTEND_URL=http://localhost:3000

# ==============================================
# DATABASE CONFIGURATION
# ==============================================

# MongoDB Settings
MongoSettings__ConnectionString=mongodb+srv://your-username:your-password@your-cluster.mongodb.net/?retryWrites=true&w=majority&appName=your-app
MongoSettings__DatabaseName=luxestate
MongoSettings__CollectionName=Properties

# ==============================================
# DEPLOYMENT CONFIGURATION
# ==============================================

# Heroku App Names (for deployment scripts)
HEROKU_FRONTEND_APP=your-frontend-app-name
HEROKU_BACKEND_APP=your-backend-app-name

# Node.js Environment
NODE_ENV=development
